<div class="page-header">
  <h1>所有任务</h1>
</div>

<% @tasks.each do |task| %>
<div class="task">
  <div class="row">

    <div class="span7">
      <p><%= task.name %></p>
      <div class="meta">
        <%= link_to "显示", task %>
        <span class="admin">
          | <%= link_to "编辑", edit_task_path(task) %> |
          <%= link_to "删除", task, method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %>
        <span>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= link_to "创建新任务", new_task_path, class: "btn btn-success" %>