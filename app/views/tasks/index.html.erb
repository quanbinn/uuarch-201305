<div class="page-header">
  <h1>All Tasks</h1>
</div>

<% @tasks.each do |task| %>
<div class="task">
  <strong><%= task.user.full_name %></strong>
  <p><%= task.name %></p>
  <div class="meta">
    <%= link_to "show", task %>
    <span class="admin">
      <%= link_to "Edit", edit_task_path(task) %> |
      <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %>
    <span>
  </div>
</div>
<% end %>

<%= link_to "Post a New Task", new_task_path, class: "btn btn-success" %>